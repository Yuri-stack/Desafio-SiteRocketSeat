{% extends "layout.njk" %}

    {% block head %}
        <title>Rocketseat - Cursos</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    {% endblock %}

    {% block container %}

        <div id="wrapper">
            <h1>Conteúdos</h1>           
        </div>

        <section class="cursos">

            <div class="curso" id="starter">
                <div class="curso-img">
                    <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Starter">
                </div>

                <div class="curso-container">
                    <h2>Starter</h2>                    
                </div>

                <div class="curso-info">
                    <p>5 Módulos</p>
                    <p class="curso-price">Gratuito</p>
                </div>
            </div>

            <div class="curso" id="launchbase ">
                <div class="curso-img">
                    <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Launchbase">
                </div>

                <div class="curso-container">
                    <h2>Launchbase</h2>                    
                </div>

                <div class="curso-info">
                    <p>7 Módulos</p>
                    <p class="curso-price">Pago</p>
                </div>
            </div>

            <div class="curso" id="gostack">
                <div class="curso-img">
                    <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="GoStack">
                </div>

                <div class="curso-container">
                    <h2>GoStack</h2>                    
                </div>

                <div class="curso-info">
                    <p>8 Módulos</p>
                    <p class="curso-price">Pago</p>
                </div>
            </div>

        </section>

        <div class="modal-overlay">

            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <a class="maximize-modal">
                    <i class="material-icons">maximize</i>
                </a>

                <div class="modal-container">
                    <div class="hidden-scroll">
                        <iframe src="https://rocketseat.com.br/" frameborder="0"></iframe>
                    </div>
                </div>
            </div>

        </div> 

        <script src="scripts.js"></script>

    {% endblock %}

</html>